{
  "name": "minesweeper",
  "version": "1.0.0",
  "description": "一款跨终端的扫雷游戏",
  "private": true,
  "author": "flyer <flyer@flyerq.com> (https://www.flyerq.com)",
  "license": "MIT",
  "homepage": "https://app.flyerq.com/minesweeper",
  "repository": "https://github.com/flyerq/minesweeper",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack\" \"npm run start\"",
    "dist": "webpack --config webpack.production.config.js",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "test": "eslint ./src/**/**.js"
  },
  "build": {
    "appId": "com.flyerq.minesweeper",
    "asar": true,
    "directories": {
      "buildResources": "assets/icons",
      "output": "build"
    },
    "files": [
      "!node_modules/",
      "assets/**/*",
      "!assets/src/",
      "dist/**/*",
      "index.html",
      "main.js",
      "manifest.json",
      "package.json"
    ],
    "win": {
      "icon": "assets/icons/app-icon-x256.ico",
      "target": ["portable", "zip"]
    }
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "concurrently": "^3.4.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.17.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "expose-loader": "^0.7.3",
    "sw-precache-webpack-plugin": "^0.11.4",
    "webpack": "^2.5.0"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "lodash": "^4.17.4",
    "phaser-ce": "^2.7.7",
    "webfontloader": "^1.6.27"
  }
}
